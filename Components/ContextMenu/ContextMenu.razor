@namespace ReactiveBlazor

@inherits BaseComponent

<style>
    .context-menu {
        width: 100%;
        height: 100vh;
        z-index: -1;
        position: fixed;
        top: 0;
        left: 0;
    }
</style>

<div @oncontextmenu:preventDefault
@oncontextmenu:stopPropagation
     @onclick="@Context"
     role="contentinfo"
     class="context-menu">
    <div class="context-menu-content">
        @ChildContent
    </div>
</div>

@code {

    private void Context(MouseEventArgs args)
    {
        Console.WriteLine(args.ClientX);
        Console.WriteLine(args.ClientY);
    }

}
